generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String   @unique
  city          String
  fieldOfStudy  String? // optionnel
  sourceComment String? // optionnel
  expectation   String? // optionnel
  createdAt     DateTime @default(now())
}

model Recruiter {
  id              Int      @id @default(autoincrement())
  companyName     String
  email           String   @unique
  companyNumber   String? // optionnel
  headquarterCity String
  sector          String? // optionnel
  sourceComment   String? // optionnel
  expectation     String? // optionnel
  createdAt       DateTime @default(now())
}
